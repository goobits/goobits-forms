{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": false,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"types": ["node"]
	},
	"include": [
		"config/**/*.ts",
		"handlers/**/*.ts",
		"i18n/**/*.ts",
		"security/**/*.ts",
		"services/**/*.ts",
		"ui/**/*.ts",
		"utils/**/*.ts",
		"validation/**/*.ts",
		"index.ts"
	],
	"exclude": [
		"node_modules",
		"demo",
		"**/*.test.ts",
		"tests",
		"dist",
		"build",
		".svelte-kit"
	]
}
